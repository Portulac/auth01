{# templates/checklist/index.html.twig #} 
{% extends 'base.html.twig' %} 

{% block body %}
    
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card bg-light mb-3 mt-3">
        <div class="card-body">
          <div class="card-header">List of sites</div>
          
          {% if app.user %}
          <table class="table">
            <tr>
              <th>Site</th>
              <th>Comment</th>
            </tr>
            {% for site in sites %}
            <tr>
              <td><a href="http://{{ site.name}}">{{ site.name}}</a></td>
              <td>{{ site.comment|raw  }}</td>
              <td><a class="btn btn-info" href="{{ path('site_check', {'id': site.id}) }}">{{ 'Check'|trans }}</a></td>
            </tr>
            {% endfor %}
          </table>
          
          {%  endif %}
        </div>
      </div>
          
      {% if app.user == null %}  
      <a href="{{ path('app_login') }}" class="btn btn-info">
        You need to login to see the list ðŸ˜œðŸ˜œ >></a
      >
      {% endif %}  
    </div>
  </div>
</div>
{% endblock %}